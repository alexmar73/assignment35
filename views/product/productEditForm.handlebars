<div class="success">
    {{success}}
</div>
<h2>Update Product</h2>

<form method="POST" action="/product/update/{{_id}}?method=PUT">
<label>Product Name</label>
<input type="text" name="productName" id="productName" value="{{productName}}"><br><br>

<label>Product Price</label>
<input type="text" name="productPrice" id="productPrice" value="{{productPrice}}"><br><br>

<label>Product Description</label>
<input type="text" name="productDescription" id="productDescription" value = "{{productDescription}}"><br><br>

<label>Product Category</label>
<input type="text" name="productCategory" id="productCategory" value = "{{productCategory}}"><br><br>

<label>Product Quantity</label>
<input type="number" name="productQuantity" id="productQuantity" value = "{{productQuantity}}"><br><br>

<p>Product Bestseller</p>
<input type="radio" name="productBestseller" id="productBestseller" value="yes" {{bestSellerChecked}}>
<label for="productBestseller">Yes</label>
<input type="radio" name="productBestseller" id="productBestseller" value="no" {{NoBestSeller}}>
<label for="productBestseller">No</label>
</br>
</br>
<img src="public/uploads/{{productPhoto}}" alt="{{productName}}" >


<input type="submit" value="Edit Product">

</form>